<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %5p %c{1}:%L - %m%n
            </pattern>
        </encoder>
    </appender>
    <root level="OFF">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>